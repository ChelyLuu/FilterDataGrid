<UserControl
    x:Class="FilterDataGrid.Themes.DragSumControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FilterDataGrid.Themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Foreground="{DynamicResource FForeground}"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="5"
            Background="{DynamicResource FBackground}"
            BorderBrush="{DynamicResource FBorderColor}"
            BorderThickness="1"
            CornerRadius="5"
            MouseDown="Border_MouseDown"
            MouseMove="Border_MouseMove"
            MouseUp="Border_MouseUp"
            TextOptions.TextFormattingMode="Display"
            TextOptions.TextRenderingMode="ClearType">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="90"
                    Opacity="0.2"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Text}" />
        </Border>
    </Grid>
</UserControl>
